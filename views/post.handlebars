<div class="text-center" id="single-post">
  {{#if logged_in}}
    <h2>{{post.title}}</h2>
    <p>{{post.body}}</p>
    <p>Created by {{post.user.username}} on {{post.createdAt}}</p>
    
    <div id="add-comment">
      <h3>Add a new comment!</h3>
      <form class="comment-form">
        <label for="comment">Comment</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
        <button type="submit">Submit</button>
      </form>
    </div>
  {{else}}
    <a href="/login"><button>Login to see Blogs</button></a>
  {{/if}}  
</div>

<h3>Comments</h3>
{{#each post.comments as |comment|}}
<div class="comment-render">
  <p>{{comment.body}}</p>
  <small>Posted by {{comment.user.username}} on {{comment.createdAt}}</small>
</div>
{{/each}}

<script src="/js/comment.js"></script>
